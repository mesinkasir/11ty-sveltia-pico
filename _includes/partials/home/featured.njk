	    <section>
        <hgroup>
          <h3>{{featured_post.title}}</h3>
          <p>... {{featured_post.description}}</p>
        </hgroup>
        <ul>{% for f in collections.posts | featuredPosts | limit(3) %}
          <li>
            <a href="{{f.url}}">{{f.data.title}}</a>
            <small> <time datetime="{{ f.date | htmlDateString }}">{{ f.date | readableDate("dd LLLL yyyy") }} </time></small>
            <p>
              <i>{{f.data.description}}</i>
            </p>
          </li>{% endfor %}
        </ul>
      </section>
      <hr>