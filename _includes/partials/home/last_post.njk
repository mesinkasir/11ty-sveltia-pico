	    <section>
        <hgroup>
          <h3>{{lastest_posts.title}}</h3>
          <p>... {{lastest_posts.description}}</p>
        </hgroup>
        <ul>{% for f in collections.posts| limit(3) %}
          <li>
            <a href="{{f.url}}">{{f.data.title}}</a>
            <small> <time datetime="{{ f.date | htmlDateString }}">{{ f.date | readableDate("dd LLLL yyyy") }} </time></small>
            <p>
              <i>{{f.data.description}}</i>
            </p>
          </li>{% endfor %}
        </ul>
        <p>
          <small> {{lastest_posts.text | md | safe}}
          </small>
        </p>
      </section>
      <hr>